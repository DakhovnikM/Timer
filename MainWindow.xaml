<Window x:Class="DigitalTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Name="LabelTimer" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="166" Width="582" FontSize="72"/>
        <Label Grid.Column="0" Name="LabelInterval" Content="" HorizontalAlignment="Left" Margin="10,226,0,0" VerticalAlignment="Top" Width="582" Height="198"/>
        <Button Grid.Column="1" Name="BtnStart" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="160" Height="74" FontSize="36" Click="BtnStart_Click"/>
        <Button Grid.Column="1" Name="BtnStop" Content="Stop" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Width="160" Height="74" FontSize="36" Click="BtnStop_Click"/>
        <Button Grid.Column="1" Name="BtnInterval" Content="Interval" HorizontalAlignment="Left" Margin="10,281,0,0" VerticalAlignment="Top" Height="78" Width="160" Click="BtnInterval_Click" FontSize="36"/>

    </Grid>
</Window>
