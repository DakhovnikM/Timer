<Window x:Class="DigitalTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Name="LabelTimer" Content="00:00:00" Margin="10,10,24,0" FontSize="72" BorderBrush="Black" BorderThickness="1" Height="120" VerticalAlignment="Top" FontStyle="Normal"/>
        <Label Grid.Column="0" Name="LabelInterval" Content="" Margin="10,145,24,10" BorderBrush="Black" BorderThickness="1"/>
        <Button Grid.Column="1" Name="BtnStart" Content="Start" Margin="10,10,14,0" VerticalAlignment="Top" Height="50" FontSize="28" Click="BtnStart_Click"/>
        <Button Grid.Column="1" Name="BtnStop" Content="Stop" Margin="10,80,14,0" VerticalAlignment="Top" Height="50" FontSize="28" Click="BtnStop_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Grid.Column="1" Name="BtnInterval" Content="Interval" Margin="10,0,14,0" VerticalAlignment="Center" Height="78" Click="BtnInterval_Click" FontSize="36"/>
        <Button Grid.Column="1" Name="BtnClear" Content="Clear" Margin="10,325,14,0" VerticalAlignment="Top" Height="78" Click="BtnInterval_Click" FontSize="36"/>

    </Grid>
</Window>
